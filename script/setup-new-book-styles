
# Create `_import-config.scss` and `{book-name}.scss`
# Create `.book-name/config`
# inside `./config`
  # create `./config/_color-map.scss`
  # `./config/_color-scheme.scss`
  # `./config/_font-map.scss`
  # `./config/_icon-map.scss`
  # `./config/_settings.scss`

#!/bin/bash
cd "$(dirname "$0")/.." || exit 111
source ./script/bootstrap || exit 111

arg1=$1

#check to see if the dir {$bookname} is found in ./styes/books
  #if found, continue and print message '{$bookname} already exsits'
  #if not found, cd into styles/books create it and continue
#cd into {$bookname} and check for config file

if [ ! -d ./styles/books/"${arg1}" ]; then
    _say "Directory not found, creating directory."
    mkdir ./styles/books/"${arg1}"
else
    _say "Directory found"
fi

if [ ! -f "./styles/books/"${arg1}"/_import-config.scss"} ]; then
    _say "_import-config.scss not found."
    touch "./styles/books/"${arg1}"/_import-config.scss"
else
    _say "_import-config.scss found"
fi
