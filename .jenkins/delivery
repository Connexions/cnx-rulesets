pipeline {
  agent { label 'docker' }
  stages {
    stage('Publish Release') {
      when { buildingTag() }
      environment {
        TWINE_CREDS = credentials('pypi-openstax-creds')
        TWINE_USERNAME = "${TWINE_CREDS_USR}"
        TWINE_PASSWORD = "${TWINE_CREDS_PSW}"
      }
      steps {
        sh "docker run --rm -e TWINE_USERNAME -e TWINE_PASSWORD -v ${WORKSPACE}/:/src/:ro -w /src python: /bin/bash -c \"pip install -q twine && python2 setup.py bdist_wheel && twine upload dist/*\""
      }
    }
  }
}
